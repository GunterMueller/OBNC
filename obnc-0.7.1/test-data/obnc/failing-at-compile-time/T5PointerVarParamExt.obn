MODULE T5PointerVarParamExt;

	TYPE
		P0 = POINTER TO RECORD END;
		P1 = POINTER TO RECORD (P0) END;
		
	VAR
		x: P1;
		
	PROCEDURE P(VAR x: P0);
	END P;

BEGIN
	P(x) (*variable pointer parameter cannot be an extended type*)
END T5PointerVarParamExt.
