MODULE EnvTest;

	IMPORT Env := extEnv;

	PROCEDURE Test;
		VAR foo: ARRAY 8 OF CHAR;
			foo1: ARRAY 4 OF CHAR;
			res: INTEGER;
	BEGIN
		Env.Get("FOO", foo, res);
		ASSERT(res = 0);
		ASSERT(foo = "bar baz");

		Env.Get("FOO", foo1, res);
		ASSERT(res = 4);
		ASSERT(foo1 = "bar");

		Env.Get("ENVTESTFOO", foo, res);
		ASSERT(res = -1)
	END Test;

BEGIN
	Test
END EnvTest.
